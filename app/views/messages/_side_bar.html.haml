.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__icon
        %li.side-header__box__edit-icon
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.side-header__box__setting-icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
           

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class:'group' do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message
              

